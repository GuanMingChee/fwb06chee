extends layout

block content
  h1= title
  p.
    Welcome to #{title} <br>
    This is the second hands-on in pug!<br>


  button(type="button", class="btn btn-success", onClick="update()") Press Me!
  
  <br>
  <br>
  div(id="target") Display!

  script.
    let client_count=0
    function update(){
      client_count++;
      document.getElementById("target").innerHTML="Value now "+ client_count
      console.log("Value now " + client_count)
    }

  p Link to new site below: 
    a(href='http://localhost:5000/hauntedplaces') Haunted Places


